<div class="author">
    <h1 class="author_heading">
        Hi, I am Mike Aremu
    </h1>
    <p class="author_body">
        We Developer and Designer
    </p>

    <img src="/img/hero-image.webp" alt="">

    <section class="articles">

        <h2 class="articles__heading"> Lastest Post</h2>

        <ul class="article-ul">

            <% data.forEach(post=> { %>

                <li>
                    <a href="/post/<%= post._id %>">
                        <span>
                            <%= post.title %>
                        </span>
                        <span class="article-list__date">
                            <%= post.createdAt.toDateString() %>
                        </span>
                    </a>
                </li>

                <% }); %>
        </ul>
        <% if (nextPage !== null) { %>

            <a href="/?page<% nextPage %>" class="pagination">&lt; view Older Posts</a>
            <% } %>

    </section>
</div>