<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>Add New Post</h2>
</div>

<form action="/add-post" method="post">
    <!-- Title Field -->
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Post Title" required>

    <!-- Content Field -->
    <label for="body">Content</label>
    <textarea name="body" cols="50" rows="10" required></textarea>

    <!-- Hidden Field for Author (if handled on the server side) -->
    <input type="hidden" name="author" value="{{user._id}}"> <!-- Assuming you pass the user ID from the server -->

    <!-- Submit Button -->
    <input type="submit" value="Add Post" class="btn">
</form>