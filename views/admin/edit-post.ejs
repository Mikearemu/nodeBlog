<a href="/dashboard"> &larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post / <%= data.title %></h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete" class="btn">
    </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title"> Title</label>
    <input type="text" name="title" value="<%= data.title %>" placeholder="Post Ttile">

    <label for="content"> Content</label>
    <textarea name="body"  cols="50" rows="10"><%= data.body %>
    </textarea>

    <input type="submit" value="Update" class="btn">
</form>